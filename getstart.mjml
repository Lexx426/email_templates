        <mj-section background-color="#f6f6f6" padding-bottom="30px">
            <mj-column width="300px" padding-top="30px">
                <mj-text>
                    <img src="https://i.ibb.co/cXhwsB1/facebook.png" width="25px" style="padding:5px;" />
